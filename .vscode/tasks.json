{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make all",
            "type": "shell",
            "options": {"cwd": "${workspaceFolder}/oxford"},
            "command": "make",
            "args": [
                "all"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "force make all",
            "type": "shell",
            "options": {"cwd": "${workspaceFolder}/oxford"},
            "command": "make",
            "args": [
                "-B",
                "all"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}